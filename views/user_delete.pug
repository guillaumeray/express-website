extends layout

block content
  h1 #{title}: #{user.name}
  p= user.lifespan
  
  if user_opinions.length
  
    p #[strong Delete the following opinions before attempting to delete this user.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Opinions
    
      dl
      each opinion in user_opinions
        dt 
          a(href=opinion.url) #{opinion.title}
        dd #{opinion.content}

  else
    p Do you really want to delete this User?
    
    form(method='POST' action='')
      div.form-group
        input#userid.form-control(type='hidden',name='userid', required='true', value=user._id )

      button.btn.btn-primary(type='submit') Delete